.PHONY: 		clean fclean re norm

NAME = push_swap

CC = gcc

ifeq ($(shell uname),Linux)
   # Linux-specific commands
	MLXFLAGS =
	CFLAGS = -Wall -Wextra -Werror -ggdb
else
   # Mac OS X-specific commands
	CFLAGS = -Wall -Wextra -Werror
	MLXFLAGS = -framework OpenGL -framework AppKit -Lmlx -lmlx -lm
endif


SRC_DIR = .
OBJ_DIR = .obj

LIBFT_A		= libft.a
LIBF_DIR 	= libft/
LIBFT		= $(addprefix $(LIBF_DIR), $(LIBFT_A))

SRC = $(SRC_DIR)/main.c \

OBJ = $(SRC:$(SRC_DIR)/%.c=$(OBJ_DIR)/%.o)

all: $(NAME)

$(NAME): $(OBJ)
	@$(CC) $(CFLAGS) $(OBJ) $(LIBFT) -o $(NAME)
	@echo "\033[1;34mCompilation termin√©e avec succ√®s ! ‚úîÔ∏è\033[0m"

$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c
	@mkdir -p $(OBJ_DIR)/create_map $(OBJ_DIR)/gnl $(OBJ_DIR)/game
	@$(CC) $(CFLAGS) -I mlx -c $< -o $@

norm:
	@if ! norminette main.c ./libft | grep -v "OK" > /dev/null; then \
		echo "\033[1;32mNorminette valide ! ‚úîÔ∏è\033[0m"; \
	else \
		norminette main.c ./libft | grep -v "OK" | grep --color=always "Error"; \
	fi

clean:
	@echo "\033[1;33mSuppression des fichiers objets... \033[0müóë"
		@rm -rf $(OBJ_DIR)

fclean: clean
	@echo "\033[1;33mSuppression du programme final... \033[0müóë"
	@rm -f $(NAME)

re: fclean norm all
